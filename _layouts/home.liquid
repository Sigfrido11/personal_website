---
layout: default
---
<div class="home">
    <style scoped>
        {% assign image_light = site.header_feature_image | relative_url | split: '.' %}
        {% assign image_dark  = site.header_feature_image_dark | default: site.header_feature_image | relative_url | split: '.' %}
        .call-out_img {
            background-image: url('{{ image_light | join: '.' }}');
        }
        html[data-theme="dark"] .call-out_img {
            background-image: url('{{ image_dark | join: '.' }}');
        }
        {% if site.header_feature_image_responsive %}
        @media screen and (max-width: 768px) {
            .call-out_img {
                background-image: url('{{ image_light[0] | append: '-medium.' | append: image_light[1] | default: image_light}}');
            }
        }
        @media screen and (max-width: 576px) {
            .call-out_img {
                background-image: url('{{ image_light[0] | append: '-small.' | append: image_light[1] }}');
            }
        }
        {% endif %}
    </style>
    <div id="main" class="call-out call-out_img">
        <h1> {{ site.header_text | default: "Change <code>header_text</code> in <code>_config.yml</code>"}} </h1>
    </div>

    {%- assign featured = site.posts | where_exp: "post", "post.tags contains 'passion'" | first -%}
  
    {% capture _blog %}{% include blog/blog.liquid %}{% endcapture %}
    {{ _blog | split: " " | join: " "}}
</div>
