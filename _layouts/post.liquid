---
layout: default
---
{% assign translation_it = nil %}
{% assign translation_en = nil %}
{% if page.lang_ref %}
  {% assign translation_it = site.posts | where: "lang_ref", page.lang_ref | where: "lang", "it" | first %}
  {% assign translation_en = site.posts | where: "lang_ref", page.lang_ref | where: "lang", "en" | first %}
{% endif %}

<article {% if page.feature-img or page.color %}class="feature-image" {% endif %}>
    <header id="main" style="">
        <div class="title-padder">
            {% if page.hide_title %}
                <div class="feature-image-padding"></div>
            {% else %}
                <h1 id="{{ page.title | cgi_escape }}" class="title">{{ page.title }}</h1>
                {% include blog/post_info.liquid author=page.author date=page.date last_modified=page.last_modified %}
            {% endif %}
        </div>
    </header>

    <section class="post-content">
    {% if page.bootstrap %}<div class="bootstrap-iso">{% endif %}
        {% if translation_it and translation_en %}
        <div class="post-lang-switch is-{{ page.lang }}" role="group" aria-label="Language switch">
          <span class="lang-indicator" aria-hidden="true"></span>
          {% if page.lang == "it" %}
            <span class="lang-option is-active" data-lang="it" aria-current="true">IT</span>
            <a class="lang-option" data-lang="en" href="{{ translation_en.url | relative_url }}" data-set-lang="en">EN</a>
          {% else %}
            <a class="lang-option" data-lang="it" href="{{ translation_it.url | relative_url }}" data-set-lang="it">IT</a>
            <span class="lang-option is-active" data-lang="en" aria-current="true">EN</span>
          {% endif %}
        </div>
        {% endif %}
        {{ content }}
    {% if page.bootstrap %}</div>{% endif %}
    </section>

    <!-- Social media shares -->
    {% include social/share_buttons.liquid %}

    <!-- Category and Tag list -->
    <div class="tag-category-container">
        <!-- Category list -->
        {% capture category_list %}{{ page.categories | join: "|" }}{% endcapture %}
        {% include default/category_list.liquid categories=category_list %}

        <!-- Tag list -->
        {% capture tag_list %}{{ page.tags | join: "|" }}{% endcapture %}
        {% include default/tags_list.liquid tags=tag_list %}
    </div>

    <div class="back-home">
        <a class="btn" href="{{ '/' | relative_url }}">
          {% if page.lang == "en" %}← Back to home{% else %}← Torna alla home{% endif %}
        </a>
    </div>

</article>

{% include blog/post_footer.liquid color=page.color img=page.feature-img %}
